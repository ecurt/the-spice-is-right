    <style type="text/css">
.container {
    display: flex;
    width: 100%;
    gap: 20px;
}

.left {
    flex: 2; 
    padding: 10px;
    margin-left: 20px; 
}

.right {
    flex: 3; 
    padding: 10px;
}

  
  label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  
  input[type="text"],
  input[type="file"],
  textarea {
    width: 100%;
    padding: 0.5rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  button {
    width: 100%;
    padding: 0.75rem;
    color: white;
    background-color: blue;
  }
  
  button:hover {
    background-color: navy;
  }
</style>
<div class="container">
    <div class="left">
        <h2>Create Recipe</h2>        
        <form action="/addRecipe" method="POST">
            <!-- Title -->
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" id="title" name="name" placeholder="Enter recipe title" required />
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="9" placeholder="Provide a description for your recipe." required></textarea>
            </div>

            <!-- Ingredients -->
            <div class="form-group">
                <label for="ingredients">Ingredients</label>
                <textarea id="ingredients" name="ingredients" rows="10" placeholder="List ingredients (one per line)" required></textarea>
            </div>
    </div>

    <div class="right">
        <!-- Instructions -->
        <div class="form-group">
            <label for="instructions">Instructions</label>
            <textarea id="instructions" name="instructions" rows="20" placeholder="Describe the steps to prepare the dish (one per line)" required></textarea>
        </div>

        <!-- Recipe Image -->
        <div class="form-group">
            {{!-- <label for="image">Recipe Image</label>
            <input type="file" id="image" name="image" accept="image/*" /> --}}
               <img src="{{recipe.image}}" alt="Recipe image">

        </div>
        
        <br />

        <!-- Difficulty -->
        <div class="form-group">
            <label for="difficulty">Difficulty</label>
            <input type="text" id="difficulty" name="difficulty" placeholder="Enter difficulty (as an int)" required />
        </div>

        <!-- Time -->
        <div class="form-group">
            <label for="time">Time</label>
            <input type="text" id="time" name="time" placeholder="Enter time (as an int)" required />
        </div>

        <button type="submit">Submit Recipe</button>
        </form>
    </div>
</div>