    <div class="container">
      <div class="left">
        <h2>Create Recipe</h2>        
      <form action="/addRecipe" method="POST">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="name"
            placeholder="Enter recipe title"
            required
          />
        </div>
        <div class="form-group">
            <label for="steps">Description</label>
            <textarea
              id="steps"
              name="description"
              rows="9"
              placeholder="Provide a description for your recipe."
              required
            ></textarea>
          </div>
        <div class="form-group">
            <label for="ingredients">Ingredients</label>
            <textarea
              id="ingredients"
              name="ingredients"
              rows="10"
              placeholder="List ingredients"
              required
            ></textarea>
          </div>
          
      </div>
      <div class="right">

          <div class="form-group">
            <label for="steps">Instructions</label>
            <textarea
              id="steps"
              name="instructions"
              rows="20"
              placeholder="Describe the steps to prepare the dish"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="image">Recipe Image</label>
            <input
              type="file"
              id="image"
              name="image"
              accept="image/*"
              {{!-- required --}}
              {{!-- I commented this out for now so that it is easier to test, add this back when we implement images. Or leave it if images are optional  --}}
            />
            
          </div>
          <!-- need an empty line, figure out a better way how to add one: -->
          <br>

          {{!-- Start of new form groups (that Evan created) --}}
          <div class="form-group">
            <label for="difficulty">Difficulty</label>
            <input
              type="text"
              id="difficulty"
              name="difficulty"
              placeholder="Enter difficulty (as an int)"
              required
            />
          </div>

          <div class="form-group">
            <label for="time">Time</label>
            <input
              type="text"
              id="time"
              name="time"
              placeholder="Enter time (as an int)"
              required
            />
          </div>
          {{!-- End of new form groups --}}
          {{!-- Also find a way to verify time is an int in both frontend and backend --}}

          <button type="submit">Submit Recipe</button>
        </form>
      </div>
    </div>